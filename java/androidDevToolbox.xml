<?xml version="1.0" encoding="UTF-8"?>
<project name="java" default="all">
  
  
  <property file="androidDevToolbox.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="128m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.zip"/>
    <include name="*.apk"/>
    <include name="*.war"/>
    <include name="*.egg"/>
    <include name="*.ear"/>
    <include name="*.ane"/>
    <include name="*.swc"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.7" value="${jdk.home.1.7}/bin"/>
  <path id="jdk.classpath.1.7">
    <fileset dir="${jdk.home.1.7}">
      <include name="lib/ant-javafx.jar"/>
      <include name="lib/dt.jar"/>
      <include name="lib/javafx-doclet.jar"/>
      <include name="lib/javafx-mx.jar"/>
      <include name="lib/jconsole.jar"/>
      <include name="lib/sa-jdi.jar"/>
      <include name="lib/tools.jar"/>
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/htmlconverter.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxrt.jar"/>
      <include name="jre/lib/JObjC.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.7}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.7}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.7"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.commons-io-2.4.classpath">
    <pathelement location="${basedir}/lib/commons-io-2.4.jar"/>
  </path>
  
  <path id="library.imgscalr-lib-4.2.classpath">
    <pathelement location="${basedir}/lib/imgscalr-lib-4.2.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm4-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module AndroidDevToolbox -->
  
  <dirname property="module.androiddevtoolbox.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.androiddevtoolbox" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.androiddevtoolbox" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.androiddevtoolbox" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.androiddevtoolbox" value="${compiler.args}"/>
  
  <property name="androiddevtoolbox.output.dir" value="${module.androiddevtoolbox.basedir}/out/production/AndroidDevToolbox"/>
  <property name="androiddevtoolbox.testoutput.dir" value="${module.androiddevtoolbox.basedir}/out/test/AndroidDevToolbox"/>
  
  <path id="androiddevtoolbox.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="androiddevtoolbox.module.production.classpath">
    <path refid="${module.jdk.classpath.androiddevtoolbox}"/>
    <path refid="library.imgscalr-lib-4.2.classpath"/>
    <path refid="library.commons-io-2.4.classpath"/>
  </path>
  
  <path id="androiddevtoolbox.runtime.production.module.classpath">
    <pathelement location="${androiddevtoolbox.output.dir}"/>
    <path refid="library.imgscalr-lib-4.2.classpath"/>
    <path refid="library.commons-io-2.4.classpath"/>
  </path>
  
  <path id="androiddevtoolbox.module.classpath">
    <path refid="${module.jdk.classpath.androiddevtoolbox}"/>
    <pathelement location="${androiddevtoolbox.output.dir}"/>
    <path refid="library.imgscalr-lib-4.2.classpath"/>
    <path refid="library.commons-io-2.4.classpath"/>
  </path>
  
  <path id="androiddevtoolbox.runtime.module.classpath">
    <pathelement location="${androiddevtoolbox.testoutput.dir}"/>
    <pathelement location="${androiddevtoolbox.output.dir}"/>
    <path refid="library.imgscalr-lib-4.2.classpath"/>
    <path refid="library.commons-io-2.4.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.androiddevtoolbox">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.androiddevtoolbox">
    <patternset refid="excluded.from.module.androiddevtoolbox"/>
  </patternset>
  
  <path id="androiddevtoolbox.module.sourcepath">
    <dirset dir="${module.androiddevtoolbox.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.androiddevtoolbox" depends="compile.module.androiddevtoolbox.production,compile.module.androiddevtoolbox.tests" description="Compile module AndroidDevToolbox"/>
  
  <target name="compile.module.androiddevtoolbox.production" depends="register.custom.compilers" description="Compile module AndroidDevToolbox; production classes">
    <mkdir dir="${androiddevtoolbox.output.dir}"/>
    <javac2 destdir="${androiddevtoolbox.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.androiddevtoolbox}/javac">
      <compilerarg line="${compiler.args.androiddevtoolbox}"/>
      <bootclasspath refid="androiddevtoolbox.module.bootclasspath"/>
      <classpath refid="androiddevtoolbox.module.production.classpath"/>
      <src refid="androiddevtoolbox.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.androiddevtoolbox"/>
    </javac2>
    
    <copy todir="${androiddevtoolbox.output.dir}">
      <fileset dir="${module.androiddevtoolbox.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.androiddevtoolbox.tests" depends="register.custom.compilers,compile.module.androiddevtoolbox.production" description="compile module AndroidDevToolbox; test classes" unless="skip.tests"/>
  
  <target name="clean.module.androiddevtoolbox" description="cleanup module">
    <delete dir="${androiddevtoolbox.output.dir}"/>
    <delete dir="${androiddevtoolbox.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.androiddevtoolbox, clean.artifact.javafxapp" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.androiddevtoolbox" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.javafxapp" value="${basedir}/out/artifacts/JavaFXApp"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="artifact.temp.output.JavaFXApp" value="${artifacts.temp.dir}/JavaFXApp.jar"/>
    <taskdef resource="com/sun/javafx/tools/ant/antlib.xml" uri="javafx:com.sun.javafx.tools.ant" classpath="${jdk.home.1.7}/lib/ant-javafx.jar"/>
  </target>
  
  <target name="clean.artifact.javafxapp" description="clean JavaFXApp artifact output">
    <delete dir="${artifact.output.javafxapp}"/>
  </target>
  
  <target name="artifact.javafxapp" depends="init.artifacts, compile.module.androiddevtoolbox" description="Build &#39;JavaFXApp&#39; artifact" xmlns:fx="javafx:com.sun.javafx.tools.ant">
    <mkdir dir="${artifact.output.javafxapp}"/>
    <copy todir="${artifact.temp.output.JavaFXApp}">
      <fileset dir="${androiddevtoolbox.output.dir}"/>
    </copy>
    <copy file="${basedir}/lib/imgscalr-lib-4.2.jar" tofile="${artifact.temp.output.JavaFXApp}/imgscalr-lib-4.2.jar"/>
    <copy file="${basedir}/lib/commons-io-2.4.jar" tofile="${artifact.temp.output.JavaFXApp}/commons-io-2.4.jar"/>
    <fx:fileset id="all_but_JavaFXApp" dir="${artifact.temp.output.JavaFXApp}" includes="**/*.jar">
      <exclude name="JavaFXApp.jar"/>
    </fx:fileset>
    <fx:fileset id="all_JavaFXApp" dir="${artifact.temp.output.JavaFXApp}" includes="**/*.jar"/>
    <fx:application id="JavaFXApp_id" name="JavaFXApp" mainClass="AndroidDevToolbox.Main"/>
    <fx:jar destfile="${artifact.temp.output.JavaFXApp}/JavaFXApp.jar">
      <fx:application refid="JavaFXApp_id"/>
      <fileset dir="${artifact.temp.output.JavaFXApp}" excludes="**/*.jar"/>
      <fx:resources>
        <fx:fileset refid="all_but_JavaFXApp"/>
      </fx:resources>
    </fx:jar>
    <fx:deploy width="600" height="400" updatemode="background" outdir="${artifact.temp.output.JavaFXApp}/deploy" outfile="JavaFXApp" nativeBundles="dmg">
      <fx:application refid="JavaFXApp_id"/>
      <fx:resources>
        <fx:fileset refid="all_JavaFXApp"/>
      </fx:resources>
    </fx:deploy>
    <copy todir="${artifact.output.javafxapp}">
      <fileset dir="${artifact.temp.output.JavaFXApp}/deploy"/>
    </copy>
    <delete includeemptydirs="true">
      <fileset dir="${artifact.temp.output.JavaFXApp}"/>
    </delete>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.javafxapp" description="Build all artifacts">
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>